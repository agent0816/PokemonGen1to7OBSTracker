#:kivy 2.2.1

Screens:

<Screens>:

<MainMenu>:

<SettingsMenu>:
    name: "SettingsMenu"
    GridLayout:
        rows: 2
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.15
            pos_hint: {"top": 0}
            ToggleButton:
                group: "settings"
                text: "Sprite\nPfade"
                on_press: root.changesettingscreen('sprite')
                allow_no_selection: False
            ToggleButton:
                group: "settings"
                text: "Bizhawk"
                on_press: root.changesettingscreen('bizhawk')
                allow_no_selection: False
            ToggleButton:
                group: "settings"
                text: "OBS"
                on_press: root.changesettingscreen('obs')
                allow_no_selection: False
            ToggleButton:
                group: "settings"
                text: "Remote"
                on_press: root.changesettingscreen('remote')
                allow_no_selection: False
            ToggleButton:
                group: "settings"
                text: "Spieler"
                on_press: root.changesettingscreen('player')
                allow_no_selection: False
            Button:
                text: "Hauptmenü"
                on_press: root.manager.current = "MainMenu"
        Screen:

<SpriteSettings>:
    GridLayout:
        cols: 2
        Label:
            text: 'Dateipfad Pokemon'
            size_hint: .3, 1
        BoxLayout:
            orientation: 'horizontal'
            AnchorLayout:
                anchor_x: 'left'
                size_hint: .7, 1
                TextInput:
                    id: common_path
                    size_hint: 1, None
                    size: "20dp", "30dp"
                    multiline: False
                    write_tab: False
                    on_text_validate: root.save_changes()
            Button:
                text: "Durchsuchen"
                size_hint: .2, None
                size: "20dp", "30dp"
                pos_hint: {"center_x":.5, "center_y": .5}
                on_press: app.browse(root.ids.common_path, root, 'directory')
        GridLayout:
            cols: 2
            size_hint: .2, 1
            AnchorLayout:
                anchor_x: 'center'
                size_hint: .1, .5
                CheckBox:
                    id: animated_check
                    size_hint: None, None
                    size: "20dp", "20dp"
                    on_press: root.save_changes()
            Label:
                text: 'animierte Sprites'
                size_hint: .3, .5
            AnchorLayout:
                anchor_x: 'center'
                size_hint: .1, .5
                CheckBox:
                    id: names_check
                    size_hint: None, None
                    size: "20dp", "20dp"
                    on_press: root.save_changes()
            Label:
                size_hint: .3, .5
                text: 'Namen anzeigen'
            AnchorLayout:
                anchor_x: 'center'
                size_hint: .1, .5
                CheckBox:
                    id: items_check
                    size_hint: None, None
                    size: "20dp", "20dp"
                    on_press: root.sprite_paths_setting()
            Label:
                size_hint: .3, .5
                text: 'Items anzeigen'
            AnchorLayout:
                anchor_x: 'center'
                size_hint: .1, .5
                CheckBox:
                    id: badges_check
                    size_hint: None, None
                    size: "20dp", "20dp"
                    on_press: root.sprite_paths_setting()
            Label:
                size_hint: .3, .5
                text: 'Orden anzeigen'
        GridLayout:
            cols: 2
            BoxLayout:
                orientation: 'vertical'
                GridLayout:
                    cols: 2
                    AnchorLayout:
                        anchor_x: 'left'
                        size_hint: .1, .5
                        CheckBox:
                            id: game_sprites_check
                            size_hint: None, None
                            size: "20dp", "20dp"
                            on_press: root.sprite_paths_setting()
                    AnchorLayout:
                        anchor_x: 'left'
                        size_hint: 1, 1
                        Label:
                            size_hint: 1, .5
                            text: 'Sprites jedes Spiels einzeln festlegen'
                AnchorLayout:
                    anchor_x: 'left'
                    size_hint: 1, 1
                    Button:
                        id: game_sprites
                        text: 'Spritepfade der einzelnen Games'
                        size_hint: 1, 1
                        on_press: root.parent.parent.changesettingscreen('games')
            BoxLayout:
                orientation: 'vertical'
                Button:
                    id: items_browse
                    text: 'Dateipfad Items'
                    on_press: app.browse(root.ids.items_path, root, 'directory')
                AnchorLayout:
                    anchor_y: 'center'
                    TextInput:
                        id: items_path
                        size_hint: 1, None
                        size: "20dp", "30dp"
                        multiline: False
                        write_tab: False
                        on_text_validate: root.save_changes()
                Button:
                    id: badges_browse
                    text: 'Dateipfad Orden'
                    on_press: app.browse(root.ids.badges_path, root, 'directory')
                AnchorLayout:
                    anchor_y: 'center'
                    TextInput:
                        id: badges_path
                        size_hint: 1, None
                        size: "20dp", "30dp"
                        multiline: False
                        write_tab: False
                        on_text_validate: root.save_changes()
        Label:
            text: 'Sortierung'
            size_hint: .2, 1
        BoxLayout:
            id: sortierung
            orientation: "horizontal"
            spacing: "20dp"
            padding: "5dp", 0
            ToggleButton:
                size_hint: 1, .5
                pos_hint: {"center_y": .5}
                on_press: root.save_changes()
                text: 'DexNr.'
                group:"sort"
                allow_no_selection: False
            ToggleButton:
                size_hint: 1, .5
                pos_hint: {"center_y": .5}
                on_press: root.save_changes()
                text: 'Team'
                group:"sort"
                allow_no_selection: False
            ToggleButton:
                size_hint: 1, .5
                pos_hint: {"center_y": .5}
                on_press: root.save_changes()
                text: 'Level'
                group:"sort"
                allow_no_selection: False
            ToggleButton:
                size_hint: 1, .5
                pos_hint: {"center_y": .5}
                on_press: root.save_changes()
                text: 'Route'
                group:"sort"
                allow_no_selection: False

