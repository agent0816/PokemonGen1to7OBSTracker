<BizhawkSettings>:
    BoxLayout:
        orientation: 'vertical'
        padding: "20dp", "20dp"
        GridLayout:
            cols: 2
            Label:
                text: 'Pfad der\nEmuHawk.exe'
                size_hint: .2, 1
            BoxLayout:
                orientation: 'horizontal'
                AnchorLayout:
                    anchor_x: 'left'
                    size_hint: .7, 1
                    TextInput:
                        id: bizhawk_exe
                        size_hint: 1, None
                        size: "20dp", "30dp"
                        multiline: False
                        write_tab: False
                        on_text_validate: root.save_changes()
                Button:
                    text: "Durchsuchen"
                    size_hint: .2, None
                    size: "20dp", "30dp"
                    pos_hint: {"center_x":.5, "center_y": .5}
                    on_press: app.browse(root.ids.bizhawk_exe, root, 'file')
            Label:
                text: 'Port'
                size_hint: .2, 1
            AnchorLayout:
                anchor_x: 'left'
                TextInput:
                    id: bizhawk_port
                    size_hint: 1, None
                    size: "20dp", "30dp"
                    multiline: False
                    write_tab: False
                    on_text_validate: root.save_changes()
        Button:
            size_hint: .5, .5
            pos_hint: {"center_x": .5}
            text: "Starte Emulatoren"
            on_press: root.launchbh()

<OBSSettings>:
    BoxLayout:
        orientation: 'vertical'
        padding: 0, "20dp"
        GridLayout:
            id: obs_settings
            cols: 2
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .3
            padding: "20dp", "0dp"
            Button:
                size_hint: 1, 1
                pos_hint: {"center_y": .5}
                text: "OBS verbinden"
                on_press: root.connectOBS()
            Button:
                size_hint: 1, 1
                pos_hint: {"center_y": .5}
                text: "OBS trennen"
                on_press: root.disconnectOBS()

<RemoteSettings>:
    BoxLayout:
        orientation: 'vertical'
        padding: "20dp", "20dp"
        id: remote_settings_box
        GridLayout:
            id: remote_settings
            cols: 2

